import testing ;


project
    : requirements
      $(c11-requires)
      <source>../../extra/test_main.cpp
      <include>.
      <include>../../extra/include
    ;


local SOURCES =
    ../../extra/test_main.cpp
    error.cpp
    host_type.cpp
    ipv4_address.cpp
    ipv6_address.cpp
    pct_encoding.cpp
    query_params_view.cpp
    scheme.cpp
    segments.cpp
    segments_view.cpp
    static_pool.cpp
    static_url.cpp
    string.cpp
    url.cpp
    url_view.cpp
    urls.cpp
    bnf/ascii.cpp
    bnf/char_set.cpp
    bnf/parse.cpp
    bnf/range.cpp
    bnf/repeat.cpp
    bnf/token.cpp
    rfc/absolute_uri_bnf.cpp
    rfc/authority_bnf.cpp
    rfc/char_sets.cpp
    rfc/fragment_bnf.cpp
    rfc/fragment_part_bnf.cpp
    rfc/hier_part_bnf.cpp
    rfc/host_bnf.cpp
    rfc/ip_literal_bnf.cpp
    rfc/ipv_future_bnf.cpp
    rfc/ipv4_address_bnf.cpp
    rfc/ipv6_address_bnf.cpp

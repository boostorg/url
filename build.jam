import-search /boost/config/checks ;

import project ;
import-search /boost/config/checks ;
import config : requires ;

constant c11-requires :
    [ requires
    cxx11_constexpr
    cxx11_decltype
    cxx11_hdr_tuple
    cxx11_template_aliases
    cxx11_variadic_templates
    ]
    ;

project /boost/url
    : common-requirements
        <library>/boost/align//boost_align
        <library>/boost/assert//boost_assert
        <library>/boost/config//boost_config
        <library>/boost/core//boost_core
        <library>/boost/mp11//boost_mp11
        <library>/boost/optional//boost_optional
        <library>/boost/static_assert//boost_static_assert
        <library>/boost/system//boost_system
        <library>/boost/throw_exception//boost_throw_exception
        <library>/boost/type_traits//boost_type_traits
        <library>/boost/variant2//boost_variant2
        <include>include
    : requirements
        $(c11-requires)
    ;

explicit
    [ alias boost_url : build//boost_url ]
    [ alias url_sources : build//url_sources ]
    [ alias all : boost_url url_sources example test ]
    ;

call-if : boost-library url
    : install boost_url
    ;
